nav.top_menu{
			width:960px;
			height:270px;
			border-radius:10px;
			margin:20px auto;
			float:center;

}
nav.top_menu ul li{		display:inline;
						position: relative;


}



nav.top_menu ul li a{
			display:inline-block;
			padding:0 50px;
			height:50px
			line-height:60px;
			color:#CCCC66;
			font-size:90px
			font-weight:500px;
			text-decoration:none;
            text-align: center;
          
            color: #ffffff;
            transition:background 0.5s linear;
			
}
nav.top_menu ul ul{
			visibility: hidden;
			position: absolute;
			left:1px;
}

nav.top_menu ul li:hover ul{
			visibility: visible; 
			background:transparent url("../image/28.jpg") no-repeat;
			z-index: 98;}
nav.top_menu ul li a:hover{
						color:block;
	background:transparent url("../image/28.jpg") no-repeat;
}

